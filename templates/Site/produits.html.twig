{% extends 'base.html.twig' %}
{% block title %}Produits
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/produits.css') }}">
{% endblock %}

{% block body %}
	<div class="products-category">

		{% for produit in produits %}
			<div class="product">
				<a href="/produit/{{produit.id}}"><img class="image_accessoire" src="{{ asset('' ~ produit.image ~ '') }}" alt="photo_accessoire" style="width: 300px; height: 300px"/></a>
            </div>

		{% endfor %}

	</div>

{% endblock %}
