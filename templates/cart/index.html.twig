{% extends 'base.html.twig' %}

{% block body %}

    <h1>Votre panier</h1>
    {% if items | length > 0 %}
    <table class= "table">
    <thead>
        <tr>
        
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
    {% for item in items %}
    <tr>
    <td>{{ item.product.nom }}</td>
    <td>{{ item.product.prix }}</td>
    <td>{{ item.quantity }}</td>
    <td>{{ item.product.prix * item.quantity }}</td>
    <td>
    <a href= "{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
    <i class="fas fa-trash"></i>
    </a>
    </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    </tfoot>
     <tr>
    <td colspan="3">Total :</td>
    <td>{{ total }}</td>
    <td></td>
    </tr>
    </table>
    {% else %}
    {% endif %}
    <p>Le panier est vide !</p>
    

    
{% endblock %}
