{% extends 'base.html.twig' %}
{% block title %}Panier
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/panier.css') }}">
{% endblock %}

{% block body %}
	<div class="fleche">
		<a href="/"><img src="{{ asset('images/logos/fleche.png') }}" alt="flèche retourne à la page d'accueil" height="50" width="100"></a>
	</div>
	<div class="titre_panier">
		<h4>Votre panier</h4>
	</div>
	<div class="page_panier">
		<div class="panier">
			{% if items | length > 0 %}
				<table class="table">
					<thead>
						<tr class="tableau_nom">
							<th>Photo</th>
							<th>Produit</th>
							<th>Prix</th>
							<th>Qté</th>
							<th>Total</th>
							<th>Retirer</th>

						</tr>
					</thead>
					<tbody>
						{% for item in items %}
							<tr>

								<td><img src="{{ item.product.image }}" alt="photo de produit" height="100" width="100"></td>
								<td>
									<div class="centre_infos">{{ item.product.nom }}</div>
								</td>
								<td>{{ item.product.prix }}</td>
								<td>{{ item.quantity }}</td>
								<td>{{ item.product.prix * item.quantity }}</td>
								<td>
									<a href="{{ path('cart_remove', {'id': item.product.id}) }}"><img src="{{ asset('images/logos/bin.png') }}" alt="corbeille" height="30" width="30">
										<i class="fas fa-trash"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>

			{% else %}
				<p>Votre panier est vide !</p>
			{% endif %}
		</div>
		<div class="valider_panier">
			<h5>
				Total :
				{{ total }}
				€
			</h5>
			<div class="lien_paiement">
				<a href="" id="lien_validation">Paiement</a>
			</div>


		</div>

	</div>


{% endblock %}
